@model MVCLocalGlobalization.Models.UserModel
@{
    ViewBag.Title = "MVC Localization and Globalization";
}

<div class="jumbotron">
    <h1>MVC Localization and Globalization </h1>
</div>

<div class="row">
    <div class="col-md-12">
        <div class="h1">
            <!-- Example for App-GlobalResources -->
            @Resources.MainPage.Header
        </div><br />
        <div class="form-group">
            <!-- Example for App-LocalResources -->
            <!-- Bind model here using Html Helper -->
            @Html.LabelFor(m => m.Name)
            @Html.TextAreaFor(m => m.Name)
            
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.Address)
            @Html.TextAreaFor(m => m.Address)

        </div>
    </div>
</div>